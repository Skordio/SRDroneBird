{
	"name": "sr_dronebird_website",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"dev": "vite --host",
		"build": "run-p type-check build-only",
		"preview": "vite preview",
		"test:unit": "vitest --environment jsdom --root src/",
		"build-only": "vite build",
		"test": "echo \"Error: no test specified\" && exit 1",
		"prettier:all": "prettier --write .",
		"prettier:checkall": "prettier --check .",
		"eslint:all": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts,.html",
		"prepare": "husky install"
	},
	"dependencies": {
		"@fortawesome/fontawesome-svg-core": "^6.7.2",
		"@fortawesome/free-solid-svg-icons": "^6.7.2",
		"@fortawesome/vue-fontawesome": "^3.0.8",
		"@popperjs/core": "^2.11.8",
		"@types/jsdom": "^20.0.1",
		"@types/node": "^18.19.76",
		"@vitejs/plugin-vue": "^4.6.2",
		"@vue/test-utils": "^2.4.6",
		"@vue/tsconfig": "^0.1.3",
		"@vueuse/core": "^10.11.1",
		"axios": "^1.8.1",
		"bootstrap": "^5.3.3",
		"bootswatch": "^5.3.3",
		"eventemitter3": "^5.0.1",
		"jquery": "^3.7.1",
		"jsdom": "^20.0.3",
		"pinia": "^2.3.1",
		"sass": "^1.85.1",
		"video.js": "^8.21.0",
		"vite": "^6.2.0",
		"vitest": "^3.0.7",
		"vue": "^3.5.13",
		"vue-router": "^4.5.0",
		"vue-sidebar-menu": "^5.4.2",
		"vuetify": "^3.7.14"
	},
	"devDependencies": {
		"@openapitools/openapi-generator-cli": "^2.16.3",
		"@types/node": "^17.0.29",
		"@typescript-eslint/eslint-plugin": "^5.62.0",
		"@typescript-eslint/parser": "^5.62.0",
		"@vue/eslint-plugin": "^4.2.0",
		"eslint": "^8.57.1",
		"eslint-plugin-html": "^7.1.0",
		"eslint-plugin-vue": "^9.32.0",
		"husky": "^8.0.3",
		"lint-staged": "^13.3.0",
		"prettier": "2.8.3",
		"tslib": "^2.8.1",
		"typescript": "^5.7.3",
		"videojs-resolution-switcher": "^0.4.2",
		"vite": ">=4.5.6",
		"vue-eslint-parser": "^9.4.3"
	},
	"lint-staged": {
		"*.{vue,js,jsx,cjs,mjs,ts,tsx,cts,mts,html}": [
			"prettier --write"
		],
		"*.{md,json}": [
			"prettier --write"
		],
		"*.py": [
			"black"
		]
	},
	"eslintConfig": {
		"root": true,
		"parser": "vue-eslint-parser",
		"parserOptions": {
			"parser": "@typescript-eslint/parser",
			"sourceType": "module"
		},
		"plugins": [
			"@typescript-eslint",
			"@vue",
			"html"
		],
		"extends": [
			"eslint:recommended",
			"plugin:@typescript-eslint/eslint-recommended",
			"plugin:@typescript-eslint/recommended",
			"plugin:vue/base"
		],
		"rules": {
			"no-console": "warn",
			"prefer-const": "off",
			"no-var": "off",
			"@typescript-eslint/ban-types": "off",
			"@typescript-eslint/no-inferrable-types": "off",
			"no-empty": "off",
			"no-unsafe-optional-chaining": "warn",
			"@typescript-eslint/no-unused-vars": "off",
			"no-mixed-spaces-and-tabs": "off"
		}
	},
	"prettier": {
		"trailingComma": "es5",
		"tabWidth": 4,
		"useTabs": true,
		"semi": false
	},
	"engines": {
		"node": ">=14",
		"pnpm": ">=7"
	},
	"keywords": [],
	"author": "skordion@hotmail.com",
	"license": "MIT"
}
